# Azure AI Foundry Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# Azure AI Foundry Project Endpoint
# Format: https://your-project.services.ai.azure.com/api/projects/your-project
AZURE_OPENAI_ENDPOINT=

# Model Deployment Name (recommended: gpt-4.1-mini for cost-effective multi-agent workflows)
AZURE_OPENAI_MODEL_DEPLOYMENT=gpt-4.1-mini

# Bing Search Connection (for web grounding in Question Answerer agent)
BING_CONNECTION_ID=

# Browser Automation Connection (for Link Checker agent)
BROWSER_AUTOMATION_CONNECTION_ID=

# Azure Application Insights (optional but recommended for tracing)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# Azure Tracing Configuration
AZURE_TRACING_GEN_AI_CONTENT_RECORDING_ENABLED=true

# Application Settings
MAX_RETRIES=10
DEFAULT_CHAR_LIMIT=2000
DEFAULT_CONTEXT=Microsoft Azure AI

# Optional: Custom timeout settings (in seconds)
AGENT_TIMEOUT=120
WORKFLOW_TIMEOUT=300
EXCEL_PROCESSING_TIMEOUT=1800